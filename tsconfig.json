{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "seed-coordinator.ts",
    "scripts/**/*.js"  // Include JavaScript files in scripts directory
  ],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
