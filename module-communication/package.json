{
    "name": "@infinivista/module-communication",
    "version": "1.0.0",
    "description": "module communication for infinivista",
    "main": "dist/main.js",
    "scripts": {
        "start": "nest start",
        "start:dev": "nest start --watch",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "seed": "ts-node -r tsconfig-paths/register src/seeder/seeder.ts",
        "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d=./src/datasource/data-source.ts ./migrations/migration",
        "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d=./src/datasource/data-source.ts",
        "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d=./src/datasource/data-source.ts",
        "migrate": "npm run migration:generate && npm run migration:run",
        "migrate:fresh": "rimraf migrations && ts-node src/utils/drop-database.ts && npm run migrate"
    },
    "dependencies": {
        "@nestjs/common": "^11.0.9",
        "@nestjs/config": "^4.0.0",
        "@nestjs/core": "^11.0.9",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/mapped-types": "^2.0.6",
        "@nestjs/microservices": "^11.0.11",
        "@nestjs/mongoose": "^11.0.1",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.0.9",
        "@nestjs/platform-socket.io": "^11.0.11",
        "@nestjs/terminus": "^11.0.0",
        "@nestjs/testing": "^11.0.9",
        "@nestjs/typeorm": "^11.0.0",
        "@nestjs/websockets": "^11.0.11",
        "amqp-connection-manager": "^4.1.14",
        "amqplib": "^0.10.5",
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "googleapis": "^148.0.0",
        "mongoose": "^8.9.2",
        "passport-jwt": "^4.0.1",
        "passport-local": "^1.0.0",
        "pg": "^8.13.1",
        "socket.io": "^4.8.1",
        "ts-auto-mock": "^3.7.4",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.0",
        "@eslint/js": "^9.22.0",
        "@faker-js/faker": "^9.5.0",
        "@types/bcrypt": "^5.0.2",
        "@types/bcryptjs": "^2.4.6",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/mongoose": "^5.11.96",
        "@types/node": "^22.10.2",
        "@types/passport-jwt": "^4.0.1",
        "@types/passport-local": "^1.0.38",
        "@types/socket.io": "^3.0.1",
        "@types/uuid": "^10.0.0",
        "eslint": "^9.22.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "prettier": "^3.5.3",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.26.1"
    }
}
